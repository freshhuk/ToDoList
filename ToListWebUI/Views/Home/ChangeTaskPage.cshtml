@*Применяем наш слой*@
@{
    Layout = "_Layout";
}

<header class="header">
    <h2>Change your task</h2>
</header>

<main class="main">
    <div class="editor">
        <form action="/myhttpresults/resultchangetaskdb" method="post">
           
            
            @*Тут в value значение которые хранились в нашей задачи*@ 

            <input type="hidden" id="_Id" name="_Id" value="@ViewBag.ChangedTask.Id" />

            <label>
                Task name
                <input type="text" id="_TaskName" name="_TaskName" placeholder="@ViewBag.ChangedTask.NameTask" class="text-input" />
            </label>
            
           
            <label>
                Task description
                <textarea rows="10" cols="50" class="textarea text-input" type="text" id="_TaskDescription" name="_TaskDescription" placeholder="@ViewBag.ChangedTask.DescriptionTask"></textarea>
            </label>
            <label>
                Date of completion
                <input type="date" id="_TimeTask" name="_TimeTask" placeholder="@ViewBag.ChangedTask.TaskTime" class="text-input" />
            </label>
            
            @*Это для изминение статуса выполнения задачи, тоесть выполненна или нет*@

            <label>
                Task status
                <select id="_TaskStatus" name="_TaskStatus" class="text-input">
                    <option value="In progress" selected>In progress</option>
                    <option value="Done">Done</option>
                    <option value="Not done">Not done</option>
                </select>
            </label>
            

            @*Сообщение об ошибки если пользователь не ввел данные во все поля*@
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <p class="error-message">@ViewBag.ErrorMessage</p>

            }
            <input type="submit" value="Save changes" class="submit">
        </form>
    </div>
</main>


