@*Подключаем наш слой*@
@{
    Layout = "_Layout";
}
@model ToDoListWebDomain.Domain.Entity.ToDoTask;

<header class="header">
    <h2>Create new task</h2>
</header>

<main class="main">
    <div class="editor">
        <form action="/myhttpresults/resultaddtask" method="post">

           

            <label>
                Task name
                <input type="text" name="TaskName" id="TaskName" placeholder="Task name" class="text-input" required />
            </label>

            <label>
                Task description
                <textarea rows="10" cols="50" class="textarea text-input" type="text" name="TaskDescription" id="TaskDescription" placeholder="Description" required></textarea>
            </label>

            <label>
                Date of completion
                <input required type="date" name="TaskTime" id="TaskTime" placeholder="Date" class="text-input" />
            </label>
            <input type="hidden" name="TaskStatus" id="TaskStatus" value="In progress" />
            @*Сообщение об ошибки если пользователь не ввел данные во все поля*@
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <p class="error-message">@ViewBag.ErrorMessage</p>
                
            }
          
            <input type="submit" value="Create" class="submit">

        </form>
    </div>
</main>

