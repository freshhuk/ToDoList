@model ToDoListWeb.Models.UserRegistration;

<h1>Зарегайся</h1>
<html>
    <head>

    </head>
    <body>
        <form action="/Account/Register" method="post">
            @Html.AntiForgeryToken()

            <div>
                <label for="LoginProp">Логин:</label>
                <input type="text" id="LoginProp" name="LoginProp" required />
            </div>

            <div>
                <label for="Password">Пароль:</label>
                <input type="password" id="Password" name="Password" required />
            </div>
            <div>
                <label for="ConfirmPassword">Повторите пороль:</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" required />
            </div>
            <button type="submit">Register</button>
        </form>
        @*Кнопка для того что б перейти к регестрации(На случай если нет аккаунта) знаю так делают просто*@
        <a class="button" href="@Url.Action("Login", "Account")">
        Войти в аккаунт
        </a>
    </body>

</html>


